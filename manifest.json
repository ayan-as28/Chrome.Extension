{
  "manifest_version": 3,
  "name": "Title Picker Extension",
  "version": "1.0",
  "description": "Pick up and display the title of the current tab.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
